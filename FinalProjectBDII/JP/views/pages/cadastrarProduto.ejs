<%- contentFor('body') %>
<div class="container">
<div class="pageCadastrarProduto">

    <h4>CADASTRAR PRODUTO</h4>
    <hr/>

    <form action="/api/product" method="POST" class="form-vertical  js-form-loading">
		
        <div class="form-group">
            <label for="title">Nome</label>
            <input
                type="title"
                id="title"
                name="title"
                class="form-control"
            />
        </div>

        <div class="form-group">
                <label for="exampleFormControlSelect1">Categoria</label>
                <select class="form-control" id="category" name="category">
                  <option value="eletrodomesticos">Eletrodomesticos</option>
                  <option value="eletroportaveis">Eletroportáteis</option>
                  <option value="esporte_e_lazer">Esporte e Lazer</option>
                  <option value="informatica">Informática</option>
                  <option value="moveis_e_decoracao">Móveis e Decoração</option>
                  <option value="smartphones">Smartphones</option>
                  <option value="tv_audio_e_video">TV Áudio e Vídeo</option>
               </select>
        </div>
    
        <div class="form-group">
            <label for="description">Descrição</label>
            <textarea  
                type="description"
                id="description"
                name="description"
                class="form-control"
            >
            </textarea>
        </div>
    
        <div class="row">
            
            <div class="col-sm-2">
                <div class="form-group">
                    <label for="price">Preço unitário</label>
                    <input 
                        type="price"
                        id="price"
                        name="price"
                        class="form-control"
                    />
                </div>
            </div>
            
            <div class="col-sm-2">
                <div class="form-group">
                    <label for="active">Imagem</label>
                    <input 
                        type="file"
                        name="images"
                    />
                </div>
            </div>
        
        </div>
        
        <div class="form-group">
            <button class="btn  btn-primary" type="submit">Cadastrar</button>
            <a href="/" class="btn  btn-default">Cancelar</a>
        </div>
    
    </form>

</div>
</div>


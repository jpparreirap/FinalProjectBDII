<%- contentFor('body') %>
<div class="container">
    <div class="pageLogin">
        <h4>LOGIN</h4>
        <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Digite seu Email"
              />
            </div>
            <div class="form-group">
              <label for="password">Senha</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Digite sua senha"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block btnSubmit">Entrar</button>
          </form>
    </div>
</div>
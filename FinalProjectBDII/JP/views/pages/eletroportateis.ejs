<!-- ================= main slide ================= -->
<div class="owl-init slider-main owl-carousel" data-items="1" data-nav="true" data-dots="false">
	<div class="item-slide">
		<img src="images/banners/banner1.png">
	</div>
	<div class="item-slide">
		<img src="images/banners/banner2.png">
	</div>
	<div class="item-slide">
		<img src="images/banners/banner3.png">
	</div>
	<div class="item-slide">
		<img src="images/banners/banner4.png">
	</div>
	<div class="item-slide">
		<img src="images/banners/banner5.png">
	</div>
	<div class="item-slide">
		<img src="images/banners/banner6.png">
	</div>
	<div class="item-slide">
		<img src="images/banners/banner7.png">
	</div>
</div>

<!-- ========================= SECTION REQUEST .END// ========================= -->

<!-- ========================= SECTION ITEMS ========================= -->
<section class="section-request bg padding-y-sm">
	<div class="container">
	<header class="section-heading heading-line">
		
		<h4 class="title-section bg text-uppercase">Eletroport√°teis</h4>

	</header>
	<div class="row-sm">
			<div class="col-md-2">
					<% for (let i=0;i<products.length;i++){%>
						<%if(products[i].category == 'eletroportaveis') {%>
							<figure class="card card-product">
									<img src="../images/items/<%= products[i].category %>/<%= products[i].images %>">
									<h6 class="title ">
										<a href="#">
										<%if(products[i].title == 'Cafeteira Expresso Oster PrimaLatte 19 Bar - Vermelha 220V') {%>
										<a href="/cafeteira-detalhes">
										<%}%>

										<%= products[i].title %></a></h6>
									<span class="price-new">R$ <%= products[i].price %>,00</span> 
				
									<% if (user) { %>
										<form class="formCart" action="/api/user_cart/<%= user._id %>/add_cart/<%= products[i]._id %>" method="POST">
											<button type="submit" class="btn btn-primary">Adicionar no Carrinho</button>
										</form>
									<% } %>				
							</figure> <!-- card // -->
						<% } %>
					<%if(products[i].category == 'eletroportaveis') {%>
			</div> <!-- col // -->
				
					<div class="col-md-2">
						<%}%>
						<%}%>
					</div> <!-- col // -->
				
	
	
	</div><!-- container // -->
		
	
</section>
<!-- ========================= SECTION ITEMS .END// ========================= -->

</body>
</html>